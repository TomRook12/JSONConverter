Root:
    text_input: text_input

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 30
                Button:
                    text: "Open"
                    on_release: root.show_open()
                Button:
                    text: "Export"
                    on_release: root.show_export()
    BoxLayout:
        TextInput:
            id: text_input
            text: ""

        RstDocument
            text: text_input.text
            show_errors: True

<ExportDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

<OpenDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

